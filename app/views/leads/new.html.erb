<div class="container lead-container">
  <h2 class="lead-title">We'd love to learn about your business <br /> and discuss your development needs.</h2>
  <%= form_for(@lead) do |f| %>
    <% if @lead.errors.any? %>
      <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <h4 class="alert-validation">
          <%= pluralize(@lead.errors.count, "error") %> prohibited
          this client from being saved:
        </h4>
        <% @lead.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      </div>
    <% end %>
    <div class="row">
      <div class="col-md-4 form-group">
        <%= f.label "Name", class: "control-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-4 form-group">
        <%= f.label "Email", class: "control-label" %>
        <%= f.text_field :email, class: "form-control"  %>
      </div>
      <div class=" col-md-4 form-group">
        <%= f.label "Phone", class: "control-label" %>
        <%= f.text_field :phone, class: "form-control"  %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 form-group">
        <%= f.label "Company", class: "control-label" %>
        <%= f.text_field :company, class: "form-control" %>
      </div>
      <div class="col-md-4 form-group">
        <%= f.label "What is your role?", class: "control-label" %>
        <%= f.text_field :role, class: "form-control" %>
      </div>
      <div class="col-md-4 form-group">
        <%= f.label "Company website", class: "control-label" %>
        <%= f.text_field :website, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 form-group">
        <%= f.label "Nonprofit or for-profit company?", class: "control-label" %>
        <%= f.select(:company_kind, options_for_select([['For-profit'], ['Nonprofit']]), {:prompt => "Select"}, { class: 'form-control' }) %>
      </div>
      <div class="col-md-4 form-group">
      <%= f.label "How did you hear about us?", class: "control-label" %>
      <%= f.select(:hear_about_tde, options_for_select([['Referral'], ['Google Search'], ['Meetup'], ['Networking']]), {:prompt => "Select"}, { class: 'form-control' }) %>
      </div>
      <div class="col-md-4 form-group">
        <%= f.label :need_ids, "How can we help (check all that apply)?".html_safe %>
        <%= f.collection_check_boxes :need_ids, Need.all, :id, :name do |b| %>
        <div>
          <%= b.check_box %>
          <%= b.label %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-lg btn-theme-color lead-btn" %>
    </div>
    <% end %>
</div>